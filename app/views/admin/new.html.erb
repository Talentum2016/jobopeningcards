<h2> Añadir anuncio</h2>
<fieldset>
  <%= form_for @job_opening , url: '/admin', method: :post do |f| %>
    <%= f.label :title, 'Titulo de la oferta:' %> <%= @job_opening.errors[:title].first %><br/>
    <%= f.text_field :title %><br />
    <%= f.label :description, 'Descripción:' %> <%= @job_opening.errors[:description].first %><br/>
    <%= f.text_area :description, rows: 4, cols: 50 %><br />
	<%= f.label :province, 'Provincia:' %><br/>
	<%= f.select :province, options_for_select(@province_options), include_blank: true  %><br/>
    <%= f.label :requirement, 'Requisitos:' %> <%= @job_opening.errors[:requirement].first %><br/>
    <%= f.text_area :requirement, rows: 4, cols: 50 %><br/>
    <%= f.label :salary_min, 'Salario Mínimo:' %><br/>
    <%= f.number_field :salary_min, step: 1000, min: 0 %><br/>
    <%= f.label :salary_max, 'Salario Máximo:' %><br/>
    <%= f.number_field :salary_max, step: 1000, min: 0 %><br/>
	<%= f.label :contract, 'Tipo de contrato:' %><br/>
	<%= f.select :contract, options_for_select(@contract_options) %><br/>
    <%= f.label :profession, 'Profesión:' %><br/>
    <%= f.select :profession, grouped_options_for_select(@grouped_options) %><br/>
    <%= f.label(:image_job, "Imagen empleo:")%><br />
  	<%= f.file_field :image_job %><br />
    <%= f.submit 'Crear anuncio' %><br /><br />
  <%end%>	
</fieldset>	
	
