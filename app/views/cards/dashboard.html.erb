<a href="/cards/add">Añadir nueva oferta</a>   
<table>
  <tr>
    <th>Título de la Oferta</th>
      <th>Descripción</th>
      <!-- <th>Imagen</th>	 -->		
      <th>Requisitos</th>	
      <th colspan="2">Franja Salarial</th>	
      <!-- <th>Provincia</th> -->	
      <th>Puesto de trabajo</th>				
    </tr>

  <%current_user.job_openings.each do |job_opening|%>
    <tr>
      <td><%=job_opening.title%></td>
      <td><%=job_opening.description.truncate(120)%></td>
      <td><%=job_opening.requirement.truncate(120)%></td> 
      <td><%=job_opening.salary_min%> </td> 
      <td><%=job_opening.salary_max%></td> 
      <td><%=job_opening.profession.title%></td> 
      <td><%=link_to("Borrar","/cards/delete?id=" + job_opening.id.to_s,
                                    data:{confirm: '¿Seguro que quieres borrar?'})%></td>	
      <td><a href="/cards/edit?id=<%=job_opening.id%>">Editar</a></td>					
    </tr>
  <% end%>		
</table>