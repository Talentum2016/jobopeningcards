<form action="/cards/search">
	<input type="text" name="search_value" placeholder="Buscar..." />
	<select name="search_category">
		<option disabled selected> -- selecciona una opcion -- </option>
		<%=options_for_select(@search_options)%>
	</select>
	<input type="submit" value="Buscar" />
</form>

<% 
for job_opening in @job_openings
%>
<div style="border-style: solid;margin: 5px">
	<table>
		<tr>
			<td><h2><%=job_opening.title%></h2></td>
		</tr>
		<tr>
			<td><%=job_opening.created_at%></td>
		</tr>
		<tr>
			<td><%=job_opening.description.truncate(150)%></td>
		</tr>	
		
		<tr>
			<td><a href="/cards/show?id=<%=job_opening.id%>">Detalle</a></td>
		</tr>
	
	</table>
</div>

<%end%>
